<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pmfis.cinemaapp.clientactivities.Reservation"
    android:background="@color/colorItem"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/reservation_movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textSize="35sp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/reservation_movie_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genre:"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/mediumText"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/reservation_movie_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time:"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/mediumText"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/reservation_movie_imdb_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Imdb: "
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/mediumText"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/reservation_movie_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grade:"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/mediumText" />

    <TextView
        android:id="@+id/reservation_movie_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price:"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/mediumText"
        android:layout_marginBottom="40dp"/>

    <Button
        android:id="@+id/make_reservation_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="Make reservation"
        android:padding="10dp"
        android:textColor="@color/colorItem"
        android:onClick="onMakeReservationClicked"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="If you want to make more than one reservation, just repeat this step"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:textColor="#808080"/>

    <ProgressBar
        android:id="@+id/reservation_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"/>

</LinearLayout>
